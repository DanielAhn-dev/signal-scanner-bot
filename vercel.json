{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "regions": [
        "icn1"
    ],
    "functions": {
        "api/**/*.{js,ts}": {
            "maxDuration": 30
        }
    },
    "crons": [
        {
            "path": "/api/cron/briefing",
            "schedule": "30 8 * * 1-5"
        },
        {
            "path": "/api/cron/close",
            "schedule": "40 15 * * 1-5"
        }
    ]
}